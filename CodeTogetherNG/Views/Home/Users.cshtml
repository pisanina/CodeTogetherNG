@model IEnumerable<CodeTogetherNG.Models.UsersListViewModel>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Users</h2>

<table class="table-bordered table-striped table" id="UsersListTable" style="font-size: 14px;">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Owner of projects</th>
            <th>Member of projects</th>
            <th>Beginner in technologies</th>
            <th>Advanced in technologies</th>
            <th>Expert in technologies</th>
        </tr>
    </thead>

    <form asp-controller="Home" asp-action="GetListOfUsers" method="get">
        <tbody>
            @foreach (var item in Model)
            {
            <tr id="User_@item">
                <td id="@item.UserName">
                    <a asp-area="" asp-controller="Member"
                       asp-action="ShowUserProfile" asp-route-userName="@item.UserName">@item.UserName</a>
                </td>
                <td> <p id="ownerof_@item.UserName"> @item.OwnerOf</p> </td>
                <td> <p id="memberof_@item.UserName"> @item.MemberOf</p> </td>
                <td> <p id="beginnerin_@item.UserName"> @item.BeginnerIn</p> </td>
                <td> <p id="advancedin_@item.UserName"> @item.AdvancedIn</p> </td>
                <td> <p id="expertin_@item.UserName"> @item.ExpertIn</p> </td>
            </tr>
            }
        </tbody>
        </form>
</table>