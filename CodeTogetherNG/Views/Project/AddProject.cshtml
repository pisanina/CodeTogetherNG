@model CodeTogetherNG.Models.AddProjectViewModel

@{
    ViewData["Title"] = "AddProject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Please add your project</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddProject">
                <div class="form-group">
                    <input asp-for="Title" class="form-control" id="Title" autofocus 
                        placeholder="Please insert title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <textarea asp-for="Description" class="form-control" id="Description" 
                        placeholder="Please insert description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-light" id="Create" />
                </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}