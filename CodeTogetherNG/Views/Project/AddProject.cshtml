@model CodeTogetherNG.Models.AddProjectViewModel

@{
    ViewData["Title"] = "AddProject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Please add your project</h2>

<hr />
<div class="row">

        <form asp-controller="Project" asp-action="AddProject" method="post">
            <div class="col-md-6">
                <div class="d-inline">
                    <div class="form-group">
                        <input asp-for="Title" class="form-control" id="Title" autofocus
                               placeholder="Please insert title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <textarea asp-for="Description" class="form-control" id="Description"
                               placeholder="Please insert description" rows="5" style="resize:vertical"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <select name="TechList" id="TechList" size="7" multiple>

                    @foreach (var item in ViewBag.TechList)
                    {
                        <option value=@item.Id>@item.TechName</option>
                    }
                </select>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-light" id="Create" />
            </div>
        </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}